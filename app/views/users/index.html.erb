<h1>Listing users</h1>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td>
    <% if (current_user&&current_user.username == user.username) or (current_user&&current_user.admin_flag == 1) %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <% end %>
    </td>
    <td>
      <% if (current_user&&current_user.username == user.username) or (current_user&&current_user.admin_flag == 1) %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if (current_user&&current_user.admin_flag == 1) %>
  <%= link_to 'New User', new_user_path %> 
<% end %>

